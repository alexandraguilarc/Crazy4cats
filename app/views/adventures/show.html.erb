<p style="color: green"><%= notice %></p>

<%= render @adventure %>
<%= render 'comments/form' %>
<%= render 'comments/adventure_comments' %>

<div>
  <%= link_to "Edit this adventure", edit_adventure_path(@adventure) %> |
  <%= link_to "Back to adventures", adventures_path %>

  <%= button_to "Destroy this adventure", @adventure, method: :delete %>

  <% Adventure::Kinds.each do |kind| %>
    <%= button_to "#{Adventure::KindsSpanish[kind]}", new_user_reaction_path(adventure_id: @adventure.id, reaction_type: "adventure", kind: kind), method: :post %>
  <% end %>
</div>